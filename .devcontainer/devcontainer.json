{
	"name": "Chatwoot Development Codespace",
  "service": "app",
  "dockerComposeFile": "docker-compose.yml",

	"settings": { 
		"terminal.integrated.shell.linux": "/bin/zsh"
	},

 
  // 3000 rails
  // 3035 webpacker
  // 5432 postgres
  // 6379 redis
  // 1025,8025 mailhog
  "forwardPorts": [3000,3035,5432,6379,1025,8025],

  // Use 'postCreateCommand' to run commands after the container is created.
  // TODO: can we move some of these to the Dockerfile ?
	"postCreateCommand": "cp .env.example .env && rvm install && bundle install && yarn install && bundle exec rake:setup",
}